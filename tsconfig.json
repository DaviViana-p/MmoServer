{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public", 
    "rootDir": "./src"    
  },
  "include": ["src/**/*", "src/server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
